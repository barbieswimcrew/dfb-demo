{% extends "@App/base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 col-sm-push-6">
            <h3>Description</h3>
            <p>&nbsp;</p>
            {% block description %}
                <p>please insert description here</p>
            {% endblock %}
        </div>
        <div class="col-sm-5 col-sm-pull-6">
            <h3>Form</h3>
            <p>&nbsp;</p>
            {% block form %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">Submit</button>
                {{ form_end(form) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}